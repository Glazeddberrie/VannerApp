<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/crearempresa"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/txt_nombreEmpresa"
        android:layout_width="294dp"
        android:layout_height="54dp"
        android:layout_marginBottom="532dp"
        android:ems="10"
        android:hint="nombre empresa"
        android:inputType="text"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/txt_rutEmpresa"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="@+id/txt_rutEmpresa" />

    <EditText
        android:id="@+id/txt_confirmarContraEmpresa"
        android:layout_width="294dp"
        android:layout_height="52dp"
        android:layout_marginBottom="272dp"
        android:ems="10"
        android:hint="confirmar contraseña"
        android:inputType="text"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/txt_telefonoEmpresa"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txt_telefonoEmpresa" />

    <EditText
        android:id="@+id/txt_rutEmpresa"
        android:layout_width="298dp"
        android:layout_height="58dp"
        android:layout_marginBottom="464dp"
        android:ems="10"
        android:hint="rut empresa"
        android:inputType="text"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/txt_emailEmpresa"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txt_emailEmpresa" />

    <EditText
        android:id="@+id/txt_emailEmpresa"
        android:layout_width="296dp"
        android:layout_height="55dp"
        android:layout_marginBottom="396dp"
        android:ems="10"
        android:hint="email empresa"
        android:inputType="text"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/txt_contraEmpresa"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txt_contraEmpresa" />

    <EditText
        android:id="@+id/txt_contraEmpresa"
        android:layout_width="296dp"
        android:layout_height="49dp"
        android:layout_marginBottom="336dp"
        android:ems="10"
        android:hint="contraseña"
        android:inputType="text"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/txt_confirmarContraEmpresa"
        app:layout_constraintStart_toStartOf="@+id/txt_confirmarContraEmpresa" />

    <EditText
        android:id="@+id/txt_telefonoEmpresa"
        android:layout_width="294dp"
        android:layout_height="52dp"
        android:layout_marginBottom="220dp"
        android:ems="10"
        android:hint="telefono"
        android:inputType="text"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txt_erorresEmpresa"
        android:layout_width="313dp"
        android:layout_height="39dp"
        android:layout_marginTop="255dp"
        android:layout_marginBottom="625dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_crearEmpresa"
        android:layout_width="175dp"
        android:layout_height="54dp"
        android:layout_marginTop="650dp"
        android:text="Crear"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_volverEmpresa"
        app:layout_constraintEnd_toEndOf="@+id/btn_volverEmpresa"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btn_volverEmpresa"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.757" />

    <Button
        android:id="@+id/btn_volverEmpresa"
        android:layout_width="175dp"
        android:layout_height="54dp"
        android:layout_marginBottom="72dp"
        android:text="Volver"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="397dp"
        android:layout_height="43dp"
        android:fontFamily="sans-serif-medium"
        android:text="Crear empresa"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/txt_erorresEmpresa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView12" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="412dp"
        android:layout_height="178dp"
        android:layout_marginBottom="548dp"
        android:contentDescription="si"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/circulo_admin" />

</androidx.constraintlayout.widget.ConstraintLayout>