<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile_preview"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imagen_trabajador2"
        android:layout_width="308dp"
        android:layout_height="192dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/suaso"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nombre_trabajador"
        android:layout_width="367dp"
        android:layout_height="65dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="212dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="141dp"
        android:gravity="center"
        android:text="Unknown Unknown"
        android:textColor="#333333"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/scrollView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView4"
        android:layout_width="411dp"
        android:layout_height="140dp"
        android:layout_marginTop="278dp"
        android:layout_marginBottom="496dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/descripcion_trabajador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_margin="15dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="descripcion"
            android:textColor="#666666"
            android:textSize="20sp" />
    </ScrollView>

    <TextView
        android:id="@+id/text_titulo"
        android:layout_width="337dp"
        android:layout_height="43dp"
        android:layout_marginTop="142dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="titulo conseguido"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/scrollView4" />

    <TextView
        android:id="@+id/text_egreso"
        android:layout_width="337dp"
        android:layout_height="43dp"
        android:layout_marginTop="464dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="lugar de egreso"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_direccion"
        android:layout_width="337dp"
        android:layout_height="43dp"
        android:layout_marginTop="572dp"
        android:fontFamily="sans-serif-medium"
        android:text="direccion del trabajador"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_numero"
        android:layout_width="337dp"
        android:layout_height="43dp"
        android:layout_marginTop="616dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="telefono"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_experiencia"
        android:layout_width="337dp"
        android:layout_height="43dp"
        android:layout_marginTop="508dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="experiencia"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_editPerfil"
        android:layout_width="261dp"
        android:layout_height="54dp"
        android:layout_marginTop="680dp"
        android:fontFamily="sans-serif-medium"
        android:text="Editar perfil"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_volver"
        android:layout_width="178dp"
        android:layout_height="62dp"
        android:text="Volver"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_editPerfil"
        app:layout_constraintVertical_bias="0.169" />
</androidx.constraintlayout.widget.ConstraintLayout>